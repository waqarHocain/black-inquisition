generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id        BigInt            @id @default(autoincrement())
  email     String            @unique
  name      String
  password  String
  bio       String
  photo     String?
  phone     String?
  active    Boolean           @default(false)
  verified  Boolean           @default(false)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  role      Role
  posts     Post[]
  person    Person?
  company   Company?
  sources   ReputalbeSource[]
}

model Person {
  id          BigInt        @id @default(autoincrement())
  jobsApplied Application[]
  user        User          @relation(fields: [userId], references: [id])
  userId      BigInt        @unique
}

model Company {
  id     BigInt @id @default(autoincrement())
  jobs   Job[]
  user   User   @relation(fields: [userId], references: [id])
  userId BigInt @unique
}

model Job {
  id           BigInt        @id @default(autoincrement())
  title        String
  company      String
  location     String
  description  String
  workplace    WorkplaceType
  type         JobType
  Company      Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId    BigInt
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  applications Application[]
}

model Application {
  id        BigInt  @id @default(autoincrement())
  job       Job     @relation(fields: [jobId], references: [id], onDelete: Cascade)
  jobId     BigInt
  accepted  Boolean @default(false)
  candidate Person  @relation(fields: [personId], references: [id])
  personId  BigInt
}

model Post {
  id        BigInt   @id @default(autoincrement())
  title     String
  body      String
  User      User     @relation(fields: [userId], references: [id])
  userId    BigInt   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ReputalbeSource {
  id     BigInt  @id @default(autoincrement())
  name   String
  url    String?
  User   User    @relation(fields: [userId], references: [id])
  userId BigInt  @unique
}

enum Role {
  USER
  COMPANY
  ADMIN
}

enum JobType {
  fullTime
  partTime
  contract
  temporary
  volunteer
  internship
  other
}

enum WorkplaceType {
  onSite
  hybrid
  remote
}
