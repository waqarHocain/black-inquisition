generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id          BigInt        @id @default(autoincrement())
  email       String        @unique
  name        String
  password    String
  bio         String
  photo       String?
  active      Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  role        Role          @default(USER)
  jobsApplied Application[]
}

model Company {
  id        BigInt            @id @default(autoincrement())
  email     String            @unique
  name      String
  password  String
  phone     String
  bio       String
  photo     String?
  active    Boolean           @default(false)
  verified  Boolean           @default(false)
  sources   ReputalbeSource[]
  jobs      Job[]
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  role      Role              @default(COMPANY)
}

model Job {
  id           BigInt        @id @default(autoincrement())
  title        String
  company      String
  location     String
  description  String
  workplace    WorkplaceType
  type         JobType
  Company      Company       @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId    BigInt
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  applications Application[]
}

model Application {
  id        BigInt @id @default(autoincrement())
  job       Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)
  candidate User   @relation(fields: [userId], references: [id])
  jobId     BigInt
  userId    BigInt
}

model ReputalbeSource {
  id        BigInt  @id @default(autoincrement())
  name      String
  url       String?
  Company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId BigInt
}

enum Role {
  USER
  COMPANY
  ADMIN
}

enum JobType {
  fullTime
  partTime
  contract
  temporary
  volunteer
  internship
  other
}

enum WorkplaceType {
  onSite
  hybrid
  remote
}
