<%- include("./partials/header", {title: "Approve / Decline Account"}) %>

<section class="py-12 bg-gray-50 sm:py-16">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <h1
      class="text-center text-3xl font-bold text-gray-900 sm:text-4xl lg:text-5xl"
    >
      Approve / Decline
    </h1>
    <p class="text-center mt-4 text-gray-500">
      If you decline any acocunt, it'll be deleted from database.
    </p>

    <h2 class="text-2xl text-gray-800 font-semibold mt-5">
      <%= company.name %>
    </h2>
    <p class="text-gray-700"><strong>Bio:</strong> <br /><%= company.bio %></p>

    <h2 class="text-2xl text-gray-800 font-semibold mt-4">Contact Info:</h2>
    <ul class="text-gray-700 mt-2">
      <li>Email: <em><%= company.email %></em></li>
      <li>Phone: <em><%= company.email %></em></li>
    </ul>

    <h2 class="text-2xl text-gray-800 font-semibold mt-4">
      Reputable Sources:
    </h2>
    <ul class="text-gray-700 mt-2 list-decimal list-inside">
      <% company.sources.forEach(source => { %>
      <li><%= source.name %></li>
      <% }) %>
    </ul>

    <p class="mt-5">
      <form method="POST" action="/admin/dashboard/<%= company.id %>/approve" class="inline-block">
        <button
        class="btn-primary py-1 px-3"
        type="submit"
        >
        Approve
        </button>
      </form>

      <form method="POST" action="/admin/dashboard/<%= company.id %>/decline" class="inline-block ml-4">
        <button
        class="py-1 px-3 font-semibold border-2 border-red-300 text-red-300 hover:text-red-400 rounded-lg"
        type="submit"
        >
        Decline
        </button>
      </form>
    </p>
  </div>
</section>

<%- include("./partials/footer") %>
